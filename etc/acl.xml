<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magebuzz_Events::events" title="Events" sortOrder="20">
                    <resource id="Magebuzz_Events::manage_events" title="Manage Events" sortOrder="10"></resource>
                    <resource id="Magebuzz_Events::manage_categories" title="Manage Categories" sortOrder="10"></resource>
                    <resource id="Magebuzz_Events::settings" title="Settings" sortOrder="10"></resource>
                </resource>
                
                <!-- below part of our system configuration settings -->
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Backend::config">
                            <resource id="Magebuzz_Events::events_config" title="Events Section" />
                        </resource>
                    </resource>
                </resource>
                
            </resource>
        </resources>
    </acl>
</config>